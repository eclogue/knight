# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8

trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2
[*.{css,less,scss}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.php]
end_of_line = lf
indent_style = space
indent_size = 4
[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
